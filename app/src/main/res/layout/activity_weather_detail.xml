<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_detail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2/17/21" />

    <TextView
        android:id="@+id/textView_detail_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_detail_date"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_date"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_date"
        tools:text="Partly Cloudy" />

    <TextView
        android:id="@+id/textView_detail_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView_detail_weather"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_weather"
        tools:text="86" />

    <TextView
        android:id="@+id/textView_detail_low"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView_detail_lowLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_weather"
        tools:text="48" />

    <TextView
        android:id="@+id/textView_detail_time"
        android:layout_width="25sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="3  6  9  12  15  18  21  24  "
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_detail_timeLabel"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_timeLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_timeLabel" />

    <TextView
        android:id="@+id/textView_detail_temp"
        android:layout_width="25sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_detail_tempLabel"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_tempLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_detail_time"
        tools:text="48 56 58 62 69 75 81 86" />

    <TextView
        android:id="@+id/textView_detail_timeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Time:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_detail_high"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_highLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_high" />

    <TextView
        android:id="@+id/textView_detail_tempLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temp:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_detail_low"
        app:layout_constraintHorizontal_bias="0.628"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_lowLabel"
        app:layout_constraintTop_toTopOf="@+id/textView_detail_timeLabel" />

    <TextView
        android:id="@+id/textView_detail_highLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High: "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/textView_detail_high"
        app:layout_constraintTop_toTopOf="@+id/textView_detail_high" />

    <TextView
        android:id="@+id/textView_detail_lowLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low: "
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView_detail_weather"
        app:layout_constraintTop_toTopOf="@+id/textView_detail_low" />

    <TextView
        android:id="@+id/textView_detail_windLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Winds:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_detail_time"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_time"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_time" />

    <TextView
        android:id="@+id/textView_detail_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_detail_temp"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_temp"
        app:layout_constraintTop_toTopOf="@+id/textView_detail_windLabel"
        tools:text="NW, 5mph" />

    <TextView
        android:id="@+id/textView_detail_rainLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Chance of Rain:"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/textView_detail_windLabel"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_windLabel"
        app:layout_constraintTop_toBottomOf="@+id/textView_detail_windLabel" />

    <TextView
        android:id="@+id/textView_detail_rain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_detail_wind"
        app:layout_constraintStart_toStartOf="@+id/textView_detail_wind"
        app:layout_constraintTop_toTopOf="@+id/textView_detail_rainLabel"
        tools:text="10%" />

</androidx.constraintlayout.widget.ConstraintLayout>